  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <AzureFunctionsVersion>v2</AzureFunctionsVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Hello.fs" />
    <Compile Include="Typed.fs" />
    <Compile Include="Parameters.fs" />
    <Compile Include="FanOutFanIn.fs" />
